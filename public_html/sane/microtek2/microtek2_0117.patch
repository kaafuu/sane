+ static SANE_Status
+ usb_read_ioctl(int sfd, u_char cdb[], void *buf, size_t *length)
+ {
+     SANE_Status status;
+ 
+     struct usb_ctl_request creq;
+ 
+     DBG (11, "<< usb_read_ioctl ");
+ 
+     creq.addr = 0;
+     creq.request.bmRequestType = 0xc0;
+     creq.request.bRequest = cdb[0];
+     creq.request.wValue[0] = cdb[2];
+     creq.request.wValue[1] = 0;
+     switch (cdb[0])
+       {
+       case 0x0:
+       case 0x3:
+       case 0x12:
+ 	creq.request.wIndex[0] = 0;
+ 	creq.request.wIndex[1] = 0;
+ 	break;
+       case 0x27:			/* send gamma */
+ 	creq.request.wValue[0] = 0;
+       case 0x29:			/* send shading */
+ 	creq.request.wValue[1] = cdb[5];
+ 	creq.request.wIndex[0] = cdb[6];
+ 	creq.request.wIndex[1] = cdb[7];
+ 	break;
+       case 0x24:
+       case 0x26:			/* read sysinfo */
+       case 0x28:
+       case 0x2a:
+       default:
+ 	creq.request.wIndex[0] = cdb[6];
+ 	creq.request.wIndex[1] = cdb[7];
+ 	break;
+       }
+     creq.request.wLength[0] = *length & 0xff;
+     creq.request.wLength[1] = (*length >> 8) & 0xff;
+ 
+     creq.data = buf;
+     creq.flags = 0;
+     creq.actlen = 0;
+ 
+     DBG(20, "\n[Setup Packet] %02x %02x %02x %02x %02x %02x %02x %02x\n"
+ 	"addr = %x, data = %x, flags = %x, actlen = %x\n",
+ 	creq.request.bmRequestType,
+ 	creq.request.bRequest,
+ 	creq.request.wValue[0], creq.request.wValue[1],
+ 	creq.request.wIndex[0], creq.request.wIndex[1],
+ 	creq.request.wLength[0], creq.request.wLength[1],
+ 	creq.addr, creq.data, creq.flags, creq.actlen);
+       
+     if (ioctl(sfd, USB_DO_REQUEST, &creq) == 0)
+       status =  SANE_STATUS_GOOD;
+     else
+       status =  SANE_STATUS_INVAL;
+ 
+     DBG (30, ">>\n");
+ 
+     return (status);
+ }
